export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.8.0_121.jdk/Contents/Home"
export NVM_DIR="$HOME/.nvm"
source "/usr/local/opt/nvm/nvm.sh"

cb() {
  # get current branch
  git branch | grep '*' | awk '{print $2}'
}

export DOT=$($HOME/.dotfiles/bin/command)
export PATH="$HOME/bin:/usr/local/sbin:/usr/local/bin:$PATH"
export EDITOR="vim"

alias ll='ls -FGlAhp'
alias dot="$DOT"
alias r='npm run'
alias x='npx'
alias push='git push origin $(cb)'
alias gc='git status && git commit -am'
alias gca='git status && git commit --amend -a --no-edit'
alias log='git log --graph --decorate --oneline --all'
alias amend='gca && push -f'

if [ -d "$HOME/bin-nr" ]; then
  export PATH="$HOME/bin-nr:$PATH"
fi

if [ -f /usr/local/etc/bash_completion ]; then
. /usr/local/etc/bash_completion
fi
